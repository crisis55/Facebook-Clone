<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context="tutorial.android.bkav.com.facebookclone.AllUsersActivity">

    <include
        android:id="@+id/all_users_app_bar"
        layout="@layout/app_bar_layout">

    </include>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/all_user_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/search_input_text"
        android:layout_marginTop="11dp">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/all_users_app_bar"
        android:layout_centerHorizontal="true"
        android:text="Search for People and Friends"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/search_input_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="52dp"
        android:background="@drawable/button"
        android:ems="10"
        android:hint="Search Here"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@android:color/background_light"
        android:textColorHint="#FFFFFF" />

    <ImageButton
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/search_input_text"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/button"
        android:padding="15dp"
        app:srcCompat="@drawable/icon_search" />

</RelativeLayout>
