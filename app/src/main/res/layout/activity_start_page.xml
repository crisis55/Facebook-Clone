<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title"
    tools:context="tutorial.android.bkav.com.facebookclone.activity.StartPageActivity">

    <Button
        android:id="@+id/already_have_an_account_button"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_above="@+id/need_account_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button"
        android:padding="10dp"
        android:text="ALREADY HAVE AN ACCOUNT"
        android:textSize="16sp" />

    <Button
        android:id="@+id/need_account_button"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/already_have_an_account_button"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/already_have_an_account_button"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button"
        android:text="NEED NEW ACCOUNT"
        android:textSize="16sp" />
</RelativeLayout>
